
class Test

	get fileName as String is shared
		exePath = CobraCore.findCobraExe
		assert exePath
		if exePath
			dirPath = Path.getDirectoryName(exePath)
			path = Path.combine(dirPath, 'CobraLang.cobra')
			return path
		else
			return ''
			
	def main is shared
		using sr = File.openText(.fileName)
			print sr.readLine()
		assert sr is nil
		using sr = File.openText(.fileName)
			print sr.readLine()
		assert sr is nil
		Test().useClassVar

	var _tr as TextReader?

	def useClassVar
		assert _tr is nil
		using _tr = File.openText(.fileName)
			assert _tr is not nil
			print _tr.readLine()
		assert _tr is nil
