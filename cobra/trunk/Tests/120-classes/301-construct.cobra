class Point

	var _didBasicConstruct as bool = false
	var _x as int
	var _y as int

	cue init
		_didBasicConstruct = true

	cue init(x as int, y as int)
		.init
		_x = x
		_y = y

	def init(x as int, y as int, color as int)  # .warning. Use "cue" to declare initializers
		.init(x, y)
		pass

	get didBasicConstruct from _didBasicConstruct

	def main
		is shared
		p as Point = Point(3, 4)
		assert p.didBasicConstruct
		p = Point(3, 4, 0)
		assert p.didBasicConstruct
