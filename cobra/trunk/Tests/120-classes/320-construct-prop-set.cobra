class X

	def main is shared
		s = Stuff(a=1, b=2)
		assert s.a == 1
		assert s.b == 2

		s = Stuff('a', b='b')
		assert s.a == 'a'
		assert s.b == 'b'

		letters = 'aoeu'
		s = Stuff(letters, b='b')
		assert s.a == letters
		assert s.b == 'b'

		s = Stuff(nil, b='b')
		assert s.a is nil
		assert s.b == 'b'

		t = Thing(nil, data=5)  # test passing nil to a strongly typed arg
		assert t.data == 5

		s = Stuff(style=StyleType(Hype))  # test enum construction nested inside a prop set


enum StyleType
	Undefined
	OldFashioned
	Hype


class Stuff

	var _a as dynamic?
	var _b as dynamic?
	var _style
	
	def init
		pass

	def init(a as dynamic?)
		_a = a

	pro a from var
	
	pro b from var

	pro style from var


class Thing

	var _data as dynamic?
	var _stuff = Stuff(a='a', b='b')  # test in var decl

	def init(s as Stuff?)
		pass

	pro data from var
