
class Test

	shared

		def main
			.testExplicitDynamic
			.testImplicitDynamic

		def testExplicitDynamic
			t = List<of dynamic>()
			t.add(@[1, 2])
			t.add('aoeu')
			assert t[0]
			assert t[1] == 'aoeu'

			assert t[0].length == 2
			assert t[1].length == 4

			for x in t
				assert x.length

			t[1] = true
			assert t[1]

			d = Dictionary<of String, dynamic>()
			d.add('a', 1)
			d.add('b', t)
			assert d.count == 2
			assert d['a'] == 1
			assert d['b'] == t
			d['b'] = true
			assert d['b']

		def testImplicitDynamic
			t = []
			t.add(@[1, 2])
			t.add('aoeu')
			assert t[0]
			assert t[1] == 'aoeu'

			assert t[0].length == 2
			assert t[1].length == 4

			for x in t
				assert x.length

			t[1] = true
			assert t[1]


			d = {}
			d.add('a', 1)
			d.add('b', t)
			assert d.count == 2
			assert d['a'] == 1
			assert d['b'] == t
			d['b'] = true
			assert d['b']
