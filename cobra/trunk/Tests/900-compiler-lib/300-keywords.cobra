# this used to fail due to a bug in the KeywordSpecs class

use Cobra.Compiler

class KeywordDescriptions

	def main
		groups = KeywordSpecs.groups
		sw = StringWriter()
		print to sw
			for groupName, keywords in groups
				print "[groupName]:"
				for kw in keywords
					print "\t[kw.name]\n\t[kw.description]\n"
		s = sw.toString
		assert s.length > 1000
		assert 'cue' in s
		assert 'def' in s
