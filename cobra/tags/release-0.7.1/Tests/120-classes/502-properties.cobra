class Point

	var _x as int
	var _y as int
	
	def init
		pass
		
	def init(x as int, y as int)
		_x = x
		_y = y

	def setXY(x as int, y as int)
		_x = x
		_y = y

	get sum as int
		return _x + _y

	set total as int
		if value%2
			# odd
			_x = value // 2
			_y = _x + 1
		else
			# even
			_x = _y = value // 2
		#assert Sum==value  TODO

	def equals(x as int, y as int) as bool
		return _x==x and _y==y

	def main
		is shared
		p1 as Point = Point()
		p2 as Point = Point(3, 4)
		p1.setXY(1, 2)
		assert p1.sum==3
		p1.total = 10
		assert p1.equals(5, 5)
		p2.setXY(1, 2)
